<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cLinearLayoutItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/clinearLayoutDetails"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <!--<ImageView
            android:id="@+id/ImageViewItem"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"/>-->
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/cImageViewItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:scaleType="fitCenter" >
        </com.android.volley.toolbox.NetworkImageView>

        <TextView
            android:id="@+id/cTextViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:maxWidth="150dip"
            android:minLines="2"
            android:text="Book Title"
            android:textColor="#000000"
            android:textSize="26dip"/>

        <TextView
            android:id="@+id/cTextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clinearLayoutQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ctextViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textColor="#000000"
            android:textSize="18dip"/>
    </LinearLayout>

</LinearLayout>