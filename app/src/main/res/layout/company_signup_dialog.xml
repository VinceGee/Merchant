<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Catergory"
        android:textSize="18sp"
        android:textStyle="bold"

        />

<!--    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>-->
    <RadioGroup android:id="@+id/option"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/textView"
        android:checkedButton="@+id/block_scenario_off"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Gear"
            android:layout_height="wrap_content"
            android:id="@+id/gear"
            android:checked="true"


            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Household"
            android:layout_height="wrap_content"
            android:id="@+id/household"


            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Laptop"
            android:layout_height="wrap_content"
            android:id="@+id/laptop"


            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Mobile"

            android:layout_height="wrap_content"


            android:id="@+id/mobile"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Accessories"

            android:layout_height="wrap_content"

            android:id="@+id/accessories" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/OkDialogbutton"
        android:layout_below="@+id/option"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>