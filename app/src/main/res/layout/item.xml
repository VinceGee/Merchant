<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="10dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/ImageViewItem"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:scaleType="fitCenter" >
    </com.android.volley.toolbox.NetworkImageView>

    <TextView
        android:id="@+id/TextViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ImageViewItem"
        android:padding="5dp"
        android:textColor="@color/lbl_product_name"
        android:textSize="16sp"
        android:text="GOODS"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewItem"
        android:layout_toRightOf="@id/ImageViewItem"
        android:padding="5dp"
        android:text="DESCRIPTION"
        android:textColor="@color/lbl_product_description" />

    <TextView
        android:id="@+id/textViewQuantity"
        android:text="QUANTITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewDesc"
        android:layout_toRightOf="@id/ImageViewItem"
        android:padding="5dp"
        android:textColor="@color/lbl_product_description" />


</RelativeLayout>